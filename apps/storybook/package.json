{
  "name": "awsm-storybook",
  "version": "0.0.1",
  "author": "Evgeny Khoroshilov (https://github.com/XOP)",
  "license": "MIT",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "storybook dev -p 6006",
    "build": "storybook build",
    "lint": "eslint .storybook --ext ts,tsx",
    "serve": "http-server ./storybook-static --port 3030",
    "vrt:test": "npx playwright test",
    "vrt:update": "npx playwright test --update-snapshots"
  },
  "nx": {
    "targets": {
      "vrt:test": {
        "dependsOn": [
          "build"
        ]
      },
      "vrt:update": {
        "dependsOn": [
          "build"
        ]
      },
      "dev": {
        "dependsOn": [
          "^build"
        ]
      },
      "build": {
        "dependsOn": [
          "^build"
        ]
      }
    }
  },
  "dependencies": {
    "@awsm/fonts": "*",
    "@awsm/tokens": "*",
    "@awsm/ui": "*",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@awsm/tsconfig": "*",
    "@playwright/test": "^1.40.1",
    "@storybook/addon-a11y": "^7.6.3",
    "@storybook/addon-essentials": "^7.6.1",
    "@storybook/addon-links": "^7.6.1",
    "@storybook/addon-themes": "^7.6.1",
    "@storybook/blocks": "^7.6.1",
    "@storybook/builder-vite": "^7.6.1",
    "@storybook/react": "^7.6.1",
    "@storybook/react-vite": "^7.6.4",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.39",
    "@types/react-dom": "^18.2.17",
    "@vanilla-extract/css": "^1.14.0",
    "@vanilla-extract/vite-plugin": "^3.9.2",
    "dedent": "^1.5.1",
    "eslint": "^8.54.0",
    "eslint-config-awsm": "*",
    "http-server": "^14.1.1",
    "storybook": "^7.6.1",
    "typescript": "^5.3.2",
    "vite": "^5.0.2"
  }
}
