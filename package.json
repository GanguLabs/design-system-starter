{
  "name": "design-system-starter",
  "author": "Evgeny Khoroshilov (https://github.com/XOP)",
  "homepage": "https://github.com/XOP/design-system-starter",
  "license": "MIT",
  "private": true,
  "scripts": {
    "lint:format-log": "prettier --check --log-level=warn \"**/*.{js,cjs,ts,tsx,md,mdx,json}\"",
    "lint:format-fix": "prettier --check --log-level=warn --write \"**/*.{js,cjs,ts,tsx,md,mdx,json}\"",
    "gen:component": "turbo gen awsm-ui-component",
    "syncpack": "syncpack fix-mismatches",
    "syncpack:list": "syncpack list-mismatches",
    "change:gen": "changeset add",
    "change:version": "changeset version",
    "change:publish": "changeset publish",
    "build:pck": "nx run-many -t build --projects=packages/* --exclude @awsm/tsconfig",
    "build:app": "nx run-many -t build --projects=apps/* --exclude example-vite-ts",
    "release": "pnpm build:pck && pnpm change:publish"
  },
  "devDependencies": {
    "@changesets/changelog-git": "^0.2.0",
    "@changesets/cli": "^2.27.1",
    "@turbo/gen": "^1.11.1",
    "@types/node": "^20.10.0",
    "mkdirp": "^3.0.1",
    "nx": "^17.1.3",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "syncpack": "^11.2.1",
    "tsx": "^4.6.0",
    "turbo": "^1.11.1"
  }
}
