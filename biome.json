{
  "$schema": "https://biomejs.dev/schemas/1.6.0/schema.json",
  "files": {
    "ignore": [
      "*.cts"
    ]
  },
  "organizeImports": {
    "enabled": false
  },
  "linter": {
    "enabled": false
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80
  },
  "javascript": {
    "formatter": {
      "jsxQuoteStyle": "double",
      "quoteStyle": "single",
      "attributePosition": "multiline",
      "trailingComma": "all"
    }
  }
}
