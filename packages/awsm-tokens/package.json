{
  "name": "@awsm/tokens",
  "version": "0.0.2",
  "author": "Evgeny Khoroshilov (https://github.com/XOP)",
  "license": "MIT",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/lib/tokens/tokens.d.ts",
      "import": "./dist/tokens.esm.js",
      "require": "./dist/tokens.cjs.js"
    },
    "./css/*": {
      "import": "./dist/css/*",
      "require": "./dist/css/*"
    }
  },
  "files": [
    "dist/tokens.*",
    "dist/css",
    "dist/lib",
    "src/lib"
  ],
  "scripts": {
    "lint": "eslint --ext .js,.cjs,.ts,.cts,.tsx src/ scripts/ stories/",
    "build": "pnpm gen && vite build && tsc --project tsconfig.build.json",
    "gen": "pnpm gen:palette && pnpm gen:vars && prettier --check --write src/lib/tokens/palette.*.ts",
    "gen:vars": "tsx ./scripts/generateVars.cts",
    "gen:palette": "tsx ./scripts/generatePaletteVars.cts"
  },
  "devDependencies": {
    "@awsm/tsconfig": "workspace:*",
    "@storybook/blocks": "^7.6.1",
    "@types/react": "^18.2.39",
    "@vanilla-extract/css": "^1.14.0",
    "eslint": "^8.54.0",
    "eslint-config-awsm": "workspace:*",
    "polished": "^4.2.2",
    "typescript": "^5.3.2",
    "vite": "^5.0.2"
  }
}
