{
  "name": "@awsm/tokens",
  "version": "0.0.0",
  "author": "Evgeny Khoroshilov (https://github.com/XOP)",
  "license": "MIT",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/src/lib/tokens/tokens.d.ts",
      "import": "./dist/tokens.esm.js",
      "require": "./dist/tokens.cjs.js"
    },
    "./css/*": {
      "import": "./dist/css/*",
      "require": "./dist/css/*"
    }
  },
  "files": [
    "dist/tokens.*",
    "dist/css",
    "dist/src"
  ],
  "scripts": {
    "lint": "eslint \"src/**/*.ts*\"",
    "build": "pnpm gen && tsc && vite build",
    "gen": "pnpm gen:palette && yarn gen:vars",
    "gen:vars": "tsx ./scripts/generateVars.cts",
    "gen:palette": "tsx ./scripts/generatePaletteVars.cts"
  },
  "devDependencies": {
    "@awsm/tsconfig": "*",
    "@storybook/blocks": "^7.6.1",
    "@types/react": "^18.2.39",
    "@vanilla-extract/css": "^1.14.0",
    "eslint": "^8.54.0",
    "eslint-config-awsm": "*",
    "polished": "^4.2.2",
    "typescript": "^5.3.2",
    "vite": "^5.0.2",
    "vite-plugin-dts": "^3.6.3"
  }
}
